
{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "esModuleInterop": true,
    "pretty": true,
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "stripInternal": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"alwaysStrict": true
  },
  "include": [
    "src",
    "declarations.d.ts"
  ]
}
