{
  "name": "cac",
  "type": "module",
  "version": "6.0.0",
  "description": "Simple yet powerful framework for building command-line apps.",
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/cacjs/cac#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cacjs/cac.git"
  },
  "bugs": {
    "url": "https://github.com/cacjs/cac/issues"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsgo --noEmit",
    "format": "prettier --cache --write .",
    "toc": "markdown-toc -i README.md",
    "prepublishOnly": "pnpm build",
    "docs:api": "typedoc --out api-doc --readme none --exclude \"**/__test__/**\" --theme minimal"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.8.0",
    "@sxzz/prettier-config": "^2.3.1",
    "@types/node": "^25.3.0",
    "@typescript/native-preview": "7.0.0-dev.20260220.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdown-toc": "^1.2.0",
    "mri": "^1.2.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "tinyexec": "^1.0.2",
    "tsdown": "^0.20.3",
    "tsdown-preset-sxzz": "^0.3.3",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "release": {
    "branch": "main"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm test && lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,ts}": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "markdown-toc -i",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "dist/**",
      "mod.js"
    ]
  },
  "prettier": "@sxzz/prettier-config"
}
